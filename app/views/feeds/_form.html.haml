= form_for @feed do |f|
  -if @feed.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feed.errors.count, "error")} prohibited this feed from being saved:"
      %ul
        - @feed.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :feed_url
    = f.text_field :feed_url
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :twitter_username
    = f.text_field :twitter_username
  .actions
    = f.submit 'Save'
